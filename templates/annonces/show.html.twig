    /* Styles pour les liens */
a {
    color: #007bff; /* Couleur du lien */
    text-decoration: none; /* Supprimer le soulignement par défaut */
    margin-right: 10px; /* Espacement entre les liens */
}

/* Style au survol du lien */
a:hover {
    text-decoration: underline; /* Souligner le lien au survol */
}
/* Styles pour les liens */
a {
    color: #007bff; /* Couleur du lien */
    text-decoration: none; /* Supprimer le soulignement par défaut */
    font-weight: bold; /* Mettre en gras */
    display: inline-block; /* Pour appliquer les propriétés de taille et de marge */
    padding: 10px 20px; /* Espacement interne */
    margin-right: 10px; /* Espacement entre les liens */
    border: 2px solid transparent; /* Bordure transparente */
    border-radius: 25px; /* Bordures arrondies */
    transition: all 0.3s ease; /* Transition fluide */
    position: relative; /* Position relative pour les effets */
}

/* Effet de survol */
a:hover {
    background-color: #007bff; /* Changement de couleur de fond au survol */
    color: #fff; /* Changement de couleur du texte au survol */
    border-color: #007bff; /* Changement de couleur de la bordure au survol */
    box-shadow: 0 0 15px rgba(0, 123, 255, 0.4); /* Ombre portée au survol */
}

/* Style pour le texte avant le lien (icône par exemple) */
a::before {
    content: '\f054'; /* Code de l'icône, à remplacer par le vôtre */
    font-family: 'Font Awesome'; /* Famille de police de l'icône */
    margin-right: 5px; /* Espacement entre l'icône et le texte */
    position: absolute; /* Position absolue pour positionner l'icône */
    left: -30px; /* Décalage à gauche pour placer l'icône à côté du lien */
    transition: all 0.3s ease; /* Transition fluide */
}

/* Effet de survol pour l'icône */
a:hover::before {
    transform: translateX(-5px); /* Translation vers la gauche au survol */
}
/* CSS pour styliser le bouton de suppression */
.delete-button {
    background-color: #dc3545;
    color: #fff;
    border: none;
    border-radius: 5px;
    padding: 10px 20px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.delete-button:hover {
    background-color: #c82333;
}


