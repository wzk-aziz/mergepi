{% extends 'Front.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
<div class="container-fluid bg-dark">
    <div class="row justify-content-center">
        <div class="col-md-8">


            <div class="table mt-4">
        
                <table class="table table-dark table-striped mx-auto" style="width: fit-content;">
                    <br>
                    <br>
                    <br>
                 <h1 class="text-center text-light mt-5">Event Details</h1>
                  <br>
                    <br>
                    <br>
                 <div class="fh5co-2col fh5co-bg to-animate-2" style="background-image: url('{{ asset(event.image) }}');"></div>
                    <div class="post-thumb rounded-3 mb-3" style="display: flex; justify-content: center;">
                <img src="{{ asset('uploads/' ~ event.image) }}" width="400px" height="400px">
                    <tbody style='width:700px' >

                        <tr>
                            <th scope="row">EventName</th>
                            <td>{{ event.eventName }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Capacity</th>
                            <td>{{ event.capacity }}</td>
                        </tr>
                        <tr>
                            <th scope="row">StartDate</th>
                            <td>{{ event.startDate ? event.startDate|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">EndDate</th>
                            <td>{{ event.endDate ? event.endDate|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Place</th>
                            <td>{{ event.place }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Description</th>
                            <td>{{ event.description }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="mt-4 text-center">
                <a href="{{ path('app_event_index') }}" class="btn btn-primary">Back to List</a>
                <a href="{{ path('app_reservation_new') }}" class="btn btn-primary">Book</a>
               
             
            </div>
        </div>
    </div>
</div>
{% endblock %}
