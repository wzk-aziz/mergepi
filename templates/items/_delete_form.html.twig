<form method="post" action="{{ path('app_items_delete', {'id': item.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="mt-2">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
	<button type="submit" class="btn btn-danger btn-block">Delete</button>
</form>
