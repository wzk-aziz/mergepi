{% extends 'back.html.twig' %}

{% block title %}Inventory index
{% endblock %}

{% block body %}
	<h1>Inventory index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Description</th>
				<th>Add_date</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for inventory in inventories %}
				<tr>
					<td>{{ inventory.id }}</td>
					<td>{{ inventory.title }}</td>
					<td>{{ inventory.description }}</td>
					<td>{{ inventory.addDate ? inventory.addDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_inventory_back_show', {'id': inventory.id}) }}">show</a>
						<a href="{{ path('app_inventory_back_edit', {'id': inventory.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_inventory_back_new') }}">Create new</a>
{% endblock %}
