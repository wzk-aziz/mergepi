{% extends 'Back.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="text-center mb-4">Reservation Details</h2>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ reservation.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ reservation.nom }}</td>
                </tr>
                <tr>
                    <th>address</th>
                    <td>{{ reservation.address }}</td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td>{{ reservation.phone }}</td>
                </tr>
                <tr>
                    <th>Event ID</th>
                    <td>{{ reservation.event.id }}</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="{{ path('app_reservationback_index') }}" class="btn btn-secondary mr-2">Back to List</a>
        </div>

        {{ include('reservationback/_delete_form.html.twig') }}
    </div>
{% endblock %}
