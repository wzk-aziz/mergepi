{% extends 'Front.html.twig' %}

{% block title %}khoduh&Het{% endblock %}

{% block body %}
    <!-- Hero section -->
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            {% set slide_count = 0 %}

            {% for image in ['bg_1.jpg', 'bg_2.jpg', 'bg_3.jpg'] %}
                {% set active_class = slide_count == 0 ? 'active' : '' %}
                <div class="carousel-item {{ active_class }}">
                    <img src="{{ asset('assetsfront/images/' ~ image) }}" class="d-block w-100" alt="Slide {{ slide_count + 1 }}">
                </div>
                {% set slide_count = slide_count + 1 %}
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleSlidesOnly" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleSlidesOnly" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <script>
        $('.carousel').carousel({
            interval: 3000 // Change slide every 3 seconds
        });
    </script>

    <section class="ftco-section ftco-about">
        <div class="container">
            <div class="row">
                <div class="col-md-6 p-md-5 img img-2 d-flex justify-content-center align-items-center" style="background-image: url('{{ asset('assetsfront/images/about.jpg') }}'); min-height: 400px;"></div>

                <div class="col-md-6">
                    <div class="heading-section pl-md-5">
                        <span class="subheading">About us</span>
                        <h2 class="mb-4">Welcome to Khoudh&het</h2>
                        <p>Lhoudh&Het, une application dédié aux passionnés de mécanique, où l'échange et le troc de services, de pièces détachées et de consommables deviennent simples et rapides.
                        </p>
                        <p>Explorez notre communauté dynamique et trouvez tout ce que vous avez besoin pour vos projets mécaniques, tout en partageant votre expertise avec d'autres passionnés.</p>
                        <p>
                            <a href="#" class="btn btn-primary py-3 px-4">Nous Joindre</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services section -->
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-md-7 text-center heading-section ftco-animate">
                    <span class="subheading">Services</span>
                    <h2 class="mb-3">Nos Services</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="services services-2 w-100 text-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="flaticon-wedding-car"></span>
                        </div>
                        <div class="text w-100">
                            <h3 class="heading mb-2">Echange avec toute confidentialité</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="services services-2 w-100 text-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="flaticon-transportation"></span>
                        </div>
                        <div class="text w-100">
                            <h3 class="heading mb-2">Une gestion complete de profil</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="services services-2 w-100 text-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="flaticon-car"></span>
                        </div>
                        <div class="text w-100">
                            <h3 class="heading mb-2">Une vaste catégorie d'inventaire</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="services services-2 w-100 text-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="flaticon-transportation"></span>
                        </div>
                        <div class="text w-100">
                            <h3 class="heading mb-2">Des évènements pour les passionnés</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

